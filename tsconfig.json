{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": ["node", "cucumber"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@steps/*": ["/stepDefinitions/*"],
      "@support/*": ["support/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
